<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Diet Dropdown (Spinner) -->
    <Spinner
        android:id="@+id/spinnerDiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Distance for Transport -->
    <EditText
        android:id="@+id/editTextDistance"
        android:hint="Enter distance traveled (in km)"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Transport Dropdown (Spinner) -->
    <Spinner
        android:id="@+id/spinnerTransport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Calculate Button -->
    <Button
        android:id="@+id/buttonCalculate"
        android:text="Calculate Carbon Footprint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- TextView to display the result -->
    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carbon Footprint Result"
        android:textSize="18sp"/>

</LinearLayout>
