<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#4CAF50" <!-- Green background -->
    android:padding="24dp">

    <!-- Total Carbon Emissions Counter -->
    <TextView
        android:id="@+id/tv_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="48sp" <!-- Large font size for visibility -->
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_marginTop="40dp" <!-- Space from top -->
        android:layout_gravity="center"/>

    <!-- Open Tips Button -->
    <Button
        android:id="@+id/tips_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Tips"
        android:textSize="18sp" <!-- Consistent font size for buttons -->
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/white"
        android:textColor="#4CAF50"
        android:padding="12dp"
        android:cornerRadius="8dp"/>

    <!-- Open Calculator Button -->
    <Button
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Calculator"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/white"
        android:textColor="#4CAF50"
        android:padding="12dp"
        android:cornerRadius="8dp"/>

</LinearLayout>
