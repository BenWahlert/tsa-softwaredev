<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_energy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Energy Usage Tracker"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <!-- Spinner for selecting energy source -->
    <Spinner
        android:id="@+id/spinner_energy_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <!-- Input for energy usage (kWh for electricity, cubic meters for gas, etc.) -->
    <EditText
        android:id="@+id/et_energy_usage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter energy usage"
        android:inputType="numberDecimal"
        android:layout_marginTop="16dp"/>

    <!-- Button to save energy data -->
    <Button
        android:id="@+id/btn_start_energy_tracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Track Energy Emissions"
        android:layout_marginTop="16dp"/>
</LinearLayout>
